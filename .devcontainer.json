{
	"name": "Go",

	"dockerComposeFile": "./docker-compose.yml",
	"service": "backend",
	"workspaceFolder": "/work",

	"settings": {
		"terminal.integrated.shell.linux": "/bin/sh",
		"go.gopath": "/go",
		"go.useLanguageServer": true,
		"gopls": {
			"usePlaceholders": true
		},
		"files.eol": "\n"
	},

	"extensions": [
		"golang.Go",
		"2gua.rainbow-brackets",
		"oderwat.indent-rainbow"
	]
}
